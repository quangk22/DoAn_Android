<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageStudent"
        android:layout_width="146dp"
        android:layout_height="143dp"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textTenSV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/imageStudent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="10dp"
        android:textSize="25dp"
        android:textColor="@android:color/black"
        android:text="Tên sinh viên"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã sv: "
        android:layout_below="@+id/textTenSV"
        android:layout_toEndOf="@+id/imageStudent"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginStart="20dp"
        />

    <TextView
        android:id="@+id/textMaSV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_toEndOf="@+id/textView7"
        android:layout_below="@+id/textTenSV"/>

    <Button
        android:id="@+id/buttonSuaStu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sửa"
        android:layout_below="@+id/textMaLops"
        android:layout_toEndOf="@+id/imageStudent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/black"
        android:backgroundTint="@color/teal_200"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/buttonXoa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xóa"
        android:textColor="@android:color/black"
        android:layout_toEndOf="@+id/buttonSuaStu"
        android:layout_below="@+id/textMaLops"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/teal_200"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã lớp: "
        android:layout_below="@+id/textView7"
        android:layout_toEndOf="@+id/imageStudent"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginStart="20dp"
        />

    <TextView
        android:id="@+id/textMaLops"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/textView8"
        android:layout_below="@+id/textMaSV"
        android:text="mã lớp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="20dp"/>



</RelativeLayout>